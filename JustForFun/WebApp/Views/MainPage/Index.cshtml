@{
    ViewBag.Title = "My page";
}

@section Scripts {
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
}

<div ng-app="app-module" ng-controller="menuAnimationController">
    <div ng-class="menuMockClass" style="height:100vh" ng-mouseenter="openMenu()"></div>
    <div ng-class="menuClass" class="menu-bar" style="height: 100vh" ng-mouseleave="closeMenu()"></div>
    <div ng-class="contentClass">
        <div data-ui-view></div>
        <a ui-sref="login">login</a>
        <a ui-sref="value">value</a>
        <a ui-sref="index">index</a>
    </div>

</div>
