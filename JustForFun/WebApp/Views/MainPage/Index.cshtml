@{
    ViewBag.Title = "My page";
}

@section Scripts {
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
}

<div ng-app="app-module" ng-controller="menuAnimationController">
    <div ng-class="moveContent" ng-controller="userController">
        <div class="menu-bar col-md-2" ng-mouseenter="openMenu()" ng-mouseleave="closeMenu()">            
            <div class="menu-content">
                <h2 style="margin-left: 5%; margin-top: 3%;">Fast Meets</h2>                
                <div class="menu-link" ui-sref="login">
                    Login
                </div>
                <div class="menu-link" ui-sref="value">
                    Some Text
                </div>
                <div class="menu-link" ui-sref="index">
                    Index
                </div>
            </div>
            <div class="bottom-bar">
                <span ng-if="true" ng-click="togglePinMenuBar()" class="pull-right clickable glyphicon glyphicon-pushpin" ng-class="pinned"></span>
                <span ng-if="!isAuthenticated" class="pull-right clickable glyphicon glyphicon-log-in"></span>
                <span ng-if="isAuthenticated" class="pull-right clickable glyphicon glyphicon-log-out"></span>
            </div>
        </div>
        <div class="col-md-10" id="pageInner">
            <div data-ui-view></div>
        </div>
    </div>
</div>
